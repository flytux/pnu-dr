<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="core.file">

    <select id="selectList" parameterType="map" resultType="hashMap">
        { call sys.dbo.SYS_공통_첨부파일정보_조회(#{ATTACH_FILE_GRP_CD},#{ATTACH_FILE_GCD},#{ATTACH_FILE_SEQ_NO},#{SESSION_SYSTEM_GCD},#{SESSION_USER_ID},#{SESSION_USER_DEPT_CD},#{SESSION_SEARCH_SCOPE_GCD}) }
    </select>
    
    <select id="saveAttachFileInfo" parameterType="map" resultType="hashMap">
        { call sys.dbo.SYS_공통_첨부파일정보_저장(#{SESSION_SYSTEM_GCD},#{SESSION_MENU_CD},#{SESSION_USER_ID}, #{SESSION_USER_IP},#{ATTACH_FILE_GRP_CD},#{ATTACH_FILE_GCD},#{ORIGIN_FILE_NM},#{ATTACH_FILE_NM},#{FILE_EXTENSION_CONTENT},#{ATTACH_FILE_SENIOR_CONTENT},#{FILE_SIZE}) }
    </select> 
    
    <select id="deleteAttachFileInfo" parameterType="map" resultType="hashMap">
        { call sys.dbo.SYS_공통_첨부파일정보_삭제(#{SYSTEM_GCD},#{ATTACH_FILE_GRP_CD},#{ATTACH_FILE_GCD},#{ATTACH_FILE_SEQ_NO}) }
    </select>
    
    <select id="saveAttachFileContentInfo" parameterType="map" resultType="hashMap">
        { call sys.dbo.SYS_공통_첨부파일정보_대체텍스트_수정(#{SESSION_SYSTEM_GCD},#{SESSION_MENU_CD},#{ATTACH_FILE_GRP_CD},#{ATTACH_FILE_SEQ_NO},#{FILE_TAG_CONTENT},#{SESSION_USER_ID}, #{SESSION_USER_IP} ) }
    </select>
    
    <select id="fileTransComplete" parameterType="map" resultType="hashMap">
        { call sys.dbo.SYS_공통_첨부파일정보_수정(#{SESSION_SYSTEM_GCD},#{SESSION_SYSTEM_GCD},#{SESSION_MENU_CD},#{SESSION_USER_ID}, #{SESSION_USER_IP},#{ATTACH_FILE_GRP_CD}) }
    </select>
    
    <select id="fileInfoDelete" parameterType="map" resultType="hashMap">
        { call sys.dbo.SYS_공통_첨부파일정보_전체삭제(#{SESSION_SYSTEM_GCD},#{ATTACH_FILE_GRP_CD}) }
    </select>

</mapper>
