<mapper namespace="ost.hj.stdtinfo.stdtinfoupd">   

	<select id="selectStdtInfoUpd" resultType="hashMap">
	    {CALL OST.DBO.OST_학적_학적부_개인정보_조회(#{STDT_NO})} 
	</select>

	<select id="saveStdtInfoUpd" resultType="hashMap">
	    {CALL OST.DBO.OST_학적_학적부_개인정보_저장(
	    		#{STDT_NO}
	    	 ,  #{STDT_ENG_NM}
	    	 ,  #{STDT_ZIP_NO}
	    	 ,  #{STDT_ADDR}
	    	 ,  #{STDT_DETAIL_ADDR}
	    	 ,  #{STDT_TEL_NO}
	    	 ,  #{MIL_SERVE_GCD}
	    	 ,  #{STDT_CELLULAR_NO}
	    	 ,  #{STDT_EMAIL}
	    	 ,  #{GUARDIAN_NM}
	    	 ,  #{GUARDIAN_REL_INFO}
	    	 ,  #{GUARDIAN_TEL_NO}
	    	 ,  #{GUARDIAN_ZIP_NO}
	    	 ,  #{GUARDIAN_ADDR}
	    	 ,  #{GUARDIAN_DETAIL_ADDR}
	    	 ,  #{GUARDIAN_OCPTN_NM}
	    	 ,  #{SESSION_USER_ID}
	    	 ,  #{SESSION_USER_IP}
	    	 ,  #{SESSION_SYSTEM_GCD}
	    	 ,  #{SESSION_MENU_CD}
	    )} 
	</select>

	<select id="saveAgree" resultType="hashMap">
	    {CALL OST.DBO.OST_학적_학적부_개인정보_수신동의_저장(
	    		#{STDT_NO}
	    	 ,  #{EMAIL_RCV_AGREE_FG}
	    	 ,  #{SMS_RCV_AGREE_FG}
	    	 ,  #{KAKAOTALK_RCV_AGREE_FG}
	    	 ,  #{SESSION_USER_ID}
	    	 ,  #{SESSION_USER_IP}
	    	 ,  #{SESSION_SYSTEM_GCD}
	    	 ,  #{SESSION_MENU_CD}
	    )} 
	</select>

</mapper>
