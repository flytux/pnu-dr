<mapper namespace="ost.scm.scmsituation.JolupStdtEplymtSituation">
	
	<select id="getJolupYear" resultType="hashMap">
	    {CALL ACADEMY.DBO.SCM_현황_졸업생취업현황_졸업년도_조회(
	    	#{SESSION_SYSTEM_GCD}
	    )} 
	</select>

    <select id="selectListJolupStdtEplymtSituation" resultType="hashMap">
        { CALL ACADEMY.DBO.SCM_현황_졸업생취업현황_조회(
             #{SCH_SYEAR}
            , #{SCH_COLL_GRAD_GCD}
            , #{SCH_GRAD_GCD}
            , #{SCH_COLL_CD}
            , #{SCH_DEPT_CD}
             ,#{SCH_MAJOR_CD}
         ) }
    </select>
    
    <select id="selectEmploymentStatus" resultType="hashMap">
        { CALL ACADEMY.DBO.SCM_현황_졸업생취업현황_취업현황상세_조회(
             #{SCH_SYEAR}
            , #{SCH_COLL_GRAD_GCD}
            , #{SCH_GRAD_GCD}
            , #{SCH_COLL_CD}
            , #{SCH_DEPT_CD}
            , #{SCH_MAJOR_CD}
         ) }
    </select>
    
    <select id="selectFurtherStatus" resultType="hashMap">
        { CALL ACADEMY.DBO.SCM_현황_졸업생취업현황_진학현황상세_조회(
             #{SCH_SYEAR}
            , #{SCH_COLL_GRAD_GCD}
            , #{SCH_GRAD_GCD}
            , #{SCH_COLL_CD}
            , #{SCH_DEPT_CD}
            , #{SCH_MAJOR_CD}
         ) }
    </select>
    
    <select id="selectSpec" resultType="hashMap">
        { CALL ACADEMY.DBO.SCM_현황_졸업생취업현황_구분별_스펙_조회(
             #{SCH_SYEAR}
            , #{SCH_COLL_GRAD_GCD}
            , #{SCH_GRAD_GCD}
            , #{SCH_COLL_CD}
            , #{SCH_DEPT_CD}
            , #{SCH_MAJOR_CD}
            , #{RGROUP2}
            , #{COMPANY_CD}
            , #{COMPANY_NM}
            , #{SHOW_FG}
         ) }
    </select>
    
</mapper>